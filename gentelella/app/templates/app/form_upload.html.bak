{% extends "app/base_site.html" %}

{% block title %} Form Upload {% endblock title %}

{% block stylesheets %}
  {{ block.super }}
  <!-- Dropzone.js -->
  <link href="/static/vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet">
{% endblock stylesheets %}

{% block content %}
  <div class="right_col" role="main">
    <div class="">
      <div class="page-title">
        <div class="title_left">
          <h3>试卷编辑 </h3>
        </div>

        <div class="title_right">
          <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="clearfix"></div>

      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12"> 
          <div class="x_panel">
            <div class="x_title">
              <h2>上传文件自动识别</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Settings 1</a>
                    </li>
                    <li><a href="#">Settings 2</a>
                    </li>
                  </ul>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <form action="form_upload.html" class="dropzone col-md-5"></form>
              <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                <div class="form-group">
                  <label class="control-label col-md-1 col-sm-1 col-xs-1">科目选择</label>
                  <div class="col-md-2 col-sm-2 col-xs-2">
                  <select class="form-control">
                      <option value="">选择学科</option>
                      <optgroup label="沪教版">
                        <option value="数学">数学</option>
                        <option value="英语">英语</option>
                        <option value="语文">语文</option>
                      </optgroup>
                      <optgroup label="人教版">
                        <option value="数学">数学</option>
                        <option value="英语">英语</option>
                        <option value="语文">语文</option>
                      </optgroup>
                  </select>
                  </div>

                  <label class="control-label col-md-1 col-sm-1 col-xs-1">年级</label>
                  <div class="col-md-2 col-sm-2 col-xs-2">
                    <select class="form-control">
                      <option>一年级上</option>
                      <option>一年级下</option>
                      <option>二年级上</option>
                      <option>二年级下</option>
                      <option>Option four</option>
                    </select>
                  </div>
                </div>
               <div class="form-group">
                  <label class="control-label col-md-1 col-sm-1 col-xs-1">知识点</label>
                  <div class="col-md-2 col-sm-2 col-xs-2">
                  <select class="form-control">
                      <option value="">请选择</option>
                        <option value="数学">大数的认识</option>
                        <option value="英语">面积</option>
                        <option value="语文">行程</option>
                  </select>
                  </div>

                  <label class="control-label col-md-1 col-sm-1 col-xs-1">年级</label> 
                  <div class="col-md-2 col-sm-2 col-xs-2">
                    <select class="form-control">
                      <option>请选择</option>
                      <option>计算题</option>
                      <option>简化计算</option>
                      <option>递归运算</option>
                      <option>应用题</option>
                    </select>
                  </div>
		</form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock content %}

{% block javascripts %}
  {{ block.super }}
  <!-- Dropzone.js -->
  <script src="/static/vendors/dropzone/dist/min/dropzone.min.js"></script>
{% endblock javascripts %}
